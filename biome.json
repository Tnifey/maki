{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "ignore": ["dist/**", "node_modules/**"],
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConfusingVoidType": "off"
            }
        }
    }
}
